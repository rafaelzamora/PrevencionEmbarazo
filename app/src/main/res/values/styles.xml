<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryCardView</item>
        <item name="colorPrimaryDark">@color/colorPrimaryBackground</item>
        <item name="colorAccent">@color/colorPrimaryCardViewText</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/logo_splash</item>
        <item name="colorPrimaryDark">@color/colorPrimaryBackground</item>
    </style>

    <style name="MainTheme" parent="MainTheme.Base">

    </style>

    <style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimaryCardView</item>
        <item name="colorPrimaryDark">@color/colorPrimaryBackground</item>
        <item name="colorAccent">@color/colorPrimaryCardViewText</item>
    </style>
</resources>
